<div class="w-full min-h-screen bg-gradient-to-b from-purple-700 to-blue-600">
<div class="py-32 px-4 mx-auto">
  <div class="m-auto w-full md:w-1/3">
    <div class="px-8 py-8 bg-white rounded border border-gray-300 shadow-sm">
      <div class="mb-4 text-center">
        <h2 class="log-in-header">Welcome back</h2>
        <p class="text-gray-500 py-2">Enter your credentials to access your account.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4 text-red-800">
          <%= flash[:alert] %>
        </div>
        <div class="mb-6">
          <%= f.label :email, class: "bold-form-label" %><br />
          <%= f.email_field(
            :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "you@example.com",
            class: "form-text-input")%>
        </div>

        <div class="mb-6">
          <%= f.label :password, class: "bold-form-label" %><br />
          <%= f.password_field(
            :password,
            autocomplete: "current-password",
            placeholder: "password",
            class: "form-text-input")%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-6">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "log-in-button" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
</div>

