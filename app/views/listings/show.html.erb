<div class="flex justify-center pt-8 w-full h-full bg-gray-50">
  <div class="flex flex-col items-center w-4/5 max-w-4xl bg-white rounded-lg border border-gray-200 shadow-md">
    <div class="w-full h-full">
      <div class="flex flex-col items-center w-full">
      <h1 class="my-8 text-xl font-medium tracking-wider text-gray-700">Listings generator</h1>
      <p>Results for <%= @listing.request_type %></p>
      <p>A <%= @listing.property_type %> in <%= @listing.location %></p>
      <div class="flex flex-col items-center w-full py-4">
        <% @listing.task_runs.first.task_results.each do |result| %>
          <div class="mb-4 px-4 py-3 border border-gray-200 rounded-lg w-4/5">
            <p><%= result.result_text %></p>
            <br />
            <p>Generated by <%= result.prompt.title %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

