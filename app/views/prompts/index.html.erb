<p id="notice"><%= notice %></p>
<div class="w-full px-8">
  <div class="w-full flex items-center justify-between">
    <h1 class="text-xl text-gray-900 font-medium my-4">Prompts</h1>
    <%= link_to 'Add Prompt', new_prompt_path, class: "add-button" %>
  </div>
  <div class="border border-gray-200 rounded-lg overflow-hidden">
    <table class="w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr class="text-xs text-gray-500 text-left uppercase font-medium tracking-wider">
          <th class="px-6 py-3">Title</th>
          <th class="px-6 py-3">Active</th>
          <th class="px-6 py-3">Content</th>
          <th class="px-6 py-3">Stop</th>
          <th class="px-6 py-3">Temperature</th>
          <th class="px-6 py-3">Max tokens</th>
          <th class="px-6 py-3">Top p</th>
          <th class="px-6 py-3">Frequency penalty</th>
          <th class="px-6 py-3">Presence penalty</th>
        </tr>
      </thead>

      <tbody>
        <% @prompts.each do |prompt| %>
          <tr class="text-xs">
            <td class="px-6 py-3"><%= prompt.title %></td>
            <td class="px-6 py-3"><%= prompt.active %></td>
            <td class="px-6 py-3 whitespace-pre-wrap"><%= prompt.content %></td>
            <td class="px-6 py-3"><%= prompt.stop %></td>
            <td class="px-6 py-3"><%= prompt.temperature %></td>
            <td class="px-6 py-3"><%= prompt.max_tokens %></td>
            <td class="px-6 py-3"><%= prompt.top_p %></td>
            <td class="px-6 py-3"><%= prompt.frequency_penalty %></td>
            <td class="px-6 py-3"><%= prompt.presence_penalty %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>

