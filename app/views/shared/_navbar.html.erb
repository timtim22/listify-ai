        <% if user_signed_in? %>
          <div class="hidden md:block">
            <div class="flex items-center ml-4 md:ml-6">

              <% if current_user.admin? %>
                <% if !current_user.subscribed? %>
                  <%= link_to "Pricing", pricing_path, { class: "p-1 focus:outline-none" } %>
                  <span class="mx-1 text-gray-100"> | </span>
                <% end %>

                <% if current_user.subscription %>
                  <%= link_to "Billing", subscription_path, { class: "p-1 focus:outline-none" } %>
                  <span class="mx-1 text-gray-100"> | </span>
                <% end %>
                <%= link_to "Admin", admin_index_path, { class: "p-1 focus:outline-none" } %>
                <span class="mx-1 text-gray-100"> | </span>
              <% end %>

              <%= link_to "Account", edit_user_registration_path, { class: "p-1 focus:outline-none" } %>
              <span class="mx-1 text-gray-100"> | </span>
              <%= link_to "Sign out", destroy_user_session_path, { method: :delete, class: "p-1 focus:outline-none" } %>
            </div>
          </div>
          <div class="flex -mr-2 md:hidden">
            <%= react_component "common/MobileMenu", { admin: current_user.admin? } %>
          </div>
