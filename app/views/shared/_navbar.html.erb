            </div>
          </div>

          <div>
            <a
              href="/"
              class="text-3xl font-semibold tracking-wider text-grey-900">
              Listify
            </a>
          </div>
         <div class="hidden md:block">
            <div class="flex items-baseline ml-24 space-x-4">
              <% if user_signed_in? %>
                <%#<a href="/" class="py-2 px-3 text-sm font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-700">Home</a>%>
              <% end %>
            </div>
          </div>
