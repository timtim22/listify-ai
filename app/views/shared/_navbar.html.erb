              <%= link_to "Settings", root_url, { class: "p-1 text-gray-100 hover:text-white focus:outline-none" } %>
              <span class="mx-2 text-gray-100"> | </span>
              <%= link_to "Sign out", destroy_user_session_path, { method: :delete, class: "p-1 text-gray-100 hover:text-white focus:outline-none" } %>
            <% end %>
          </div>
