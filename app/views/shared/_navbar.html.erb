<div>
  <nav class="bg-gradient-to-r from-purple-700 to-purple-400">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="mx-2 w-7 h-7 flex justify-center items-center border border-gray-700 shadow-sm rounded-full bg-gray-200">
            <div class="flex-shrink-0 mx-2">
              <i class="text-md fas fa-user-tie"></i>
            </div>
          </div>

          <div>
            <a
              href="/"
              class="text-2xl tracking-wider text-gray-200 font-semibold hover:text-white">
              Minotaur
            </a>
          </div>
         <div class="hidden md:block">
            <div class="ml-24 flex items-baseline space-x-4">
              <% if user_signed_in? %>
                <%#<a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Home</a>%>
              <% end %>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
