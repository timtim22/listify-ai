<h1 class="mb-4 text-center">Change your plan</h1>
<p>Changes to your plan will take effect immediately, and be billed on your next invoice.</p>

<div class="flex justify-center">
  <% @plans.each do |plan| %>
    <div class="flex flex-col items-center w-1/4">
      <h5><%= plan.name %></h5>
      <h2><%= formatted_amount(plan.amount) %></h2>
      <div class="mb-3 text-xs">per <%= plan.interval %></div>
      <% if plan.stripe_id == @subscription.stripe_plan %>
        <%= link_to "Current plan", "#" %>
      <% else %>
        <%= link_to "Switch plan", subscription_path(plan_id: plan.id), method: :patch, data: { confirm: "Are you sure you want to change your plan?" } %>
      <% end %>
    </div>
  <% end %>
</div>
