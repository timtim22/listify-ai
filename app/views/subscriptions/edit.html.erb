<div class="flex flex-col items-center px-4 w-full md:px-8">

  <h1 class="mb-4 text-2xl font-medium tracking-wide">Change your plan</h1>
  <p>Changes to your plan will take effect immediately, and be billed on your next invoice.</p>
  <br />

  <div class="flex justify-center">
    <div class="grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-4 lg:gap-4">

      <% @plans.each do |plan| %>
        <div class="flex flex-col justify-center items-center w-48 h-48 bg-white rounded-lg border border-gray-200 shadow-sm">
          <h5><%= plan.name %></h5>
          <h2><%= formatted_amount(plan.amount) %></h2>
          <div class="mb-3 text-xs">per <%= plan.interval %></div>
          <% if plan.stripe_id == @subscription.stripe_plan %>
            <%= link_to "Current plan", "#" %>
          <% else %>
            <%= link_to "Switch plan", subscription_path(plan_id: plan.id), method: :patch, class: "secondary-link", data: { confirm: "Are you sure you want to change your plan?" } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
